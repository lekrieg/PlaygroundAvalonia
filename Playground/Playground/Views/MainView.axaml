<UserControl
    x:Class="Playground.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Playground.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid RowDefinitions="* 7*">
        <Border Grid.Row="0" Background="Gray">
            <Panel>
                <StackPanel
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button Content="Charts" />
                    <Button Content="Orders" />
                    <Button Content="Config" />
                </StackPanel>

                <Button
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Content="Quit" />
            </Panel>
        </Border>
        <Border Grid.Row="1">
            <Panel>
                <views:GridTestView />
            </Panel>
        </Border>
    </Grid>
</UserControl>
